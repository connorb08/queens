{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["ESNext", "DOM"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"types": ["./worker-configuration.d.ts", "bun"],
		"resolveJsonModule": true,
		"allowJs": false,
		"checkJs": false,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["test"],
	"include": ["worker/**/*.ts", "src/**/*.ts"]
}
